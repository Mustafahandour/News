<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rl_item_adapter"
    android:layout_marginTop="@dimen/dim_8dp"
    android:layout_marginEnd="@dimen/dim_8dp"
    android:layout_marginStart="@dimen/dim_8dp">
    <LinearLayout
        android:id="@+id/fragment_news_details_ll_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/margin_16dp">
        <TextView
            android:id="@+id/fragment_news_details_source"
            android:layout_width="@dimen/dim_65dp"
            android:layout_height="@dimen/dim_20dp"
            android:text="@string/source"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/fragment_news_details_tv_source"
            android:layout_width="@dimen/dim_300dp"
            android:layout_height="@dimen/dim_20dp"
            android:textColor="#881725"
            android:textSize="@dimen/font_16sp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dim_4dp"
            android:paddingEnd="@dimen/dim_4dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_news_details_ll_author"
        android:layout_below="@+id/fragment_news_details_ll_source"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dim_50dp"
        android:layout_marginEnd="@dimen/dim_50dp">
        <TextView
            android:id="@+id/fragment_news_details_author"
            android:layout_width="@dimen/dim_55dp"
            android:layout_height="@dimen/dim_20dp"
            android:text="@string/author"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_14sp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dim_4dp"
            android:paddingEnd="@dimen/dim_4dp"/>
        <TextView
            android:id="@+id/fragment_news_details_tv_author"
            android:layout_width="@dimen/dim_140dp"
            android:layout_height="@dimen/dim_20dp"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/font_12sp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dim_2dp"
            android:paddingEnd="@dimen/dim_2dp"/>
        />

    </LinearLayout>
    <TextView
        android:layout_below="@+id/fragment_news_details_ll_author"

        android:id="@+id/fragment_news_details_tv_date"
        android:layout_width="@dimen/dim_140dp"
        android:layout_height="@dimen/dim_20dp"
        android:layout_marginStart="@dimen/dim_40dp"
        android:layout_marginTop="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_40dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dim_2dp"
        android:paddingEnd="@dimen/dim_2dp"
        android:textColor="@color/deep_grey"
        android:textSize="@dimen/font_12sp" />

    <TextView
        android:id="@+id/fragment_news_details_tv_title"
        android:layout_below="@+id/fragment_news_details_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/deep_blue"
        android:textSize="@dimen/font_16sp"
        android:gravity="center"
        style="@style/margin_16dp"/>
    <ImageView
        android:id="@+id/fragment_news_details_iv_image"
        android:layout_below="@+id/fragment_news_details_tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_150dp"
        style="@style/margin_16dp"/>
    <TextView
        style="@style/margin_16dp"
        android:id="@+id/fragment_news_details_tv_description"
        android:layout_below="@+id/fragment_news_details_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/deep_blue"
        android:textSize="@dimen/font_16sp"
        android:gravity="start"/>
</RelativeLayout>
